<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColorDark"
        android:orientation="vertical"
        android:padding="15dp"
        android:paddingBottom="10dp">

        <!--suppress AndroidDomInspection -->
        <TextView
            android:id="@+id/shardName1"
            android:layout_height="wrap_content"
            android:layout_below="@+id/region"
            android:layout_marginBottom="5dp"
            android:text="@string/shard_game"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_widthPercent="50%" />
        <!--suppress AndroidDomInspection -->
        <TextView
            android:id="@+id/shardName2"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shardName1"
            android:layout_marginBottom="5dp"
            android:text="@string/shard_store"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_widthPercent="50%" />
        <!--suppress AndroidDomInspection -->
        <TextView
            android:id="@+id/shardName3"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shardName2"
            android:layout_marginBottom="5dp"
            android:text="@string/shard_website"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_widthPercent="50%" />
        <!--suppress AndroidDomInspection -->
        <TextView
            android:id="@+id/shardName4"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shardName3"
            android:layout_marginBottom="5dp"
            android:text="@string/shard_forum"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_widthPercent="50%" />
        <!--suppress AndroidDomInspection -->
        <TextView
            android:id="@+id/shardStatus1"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/region"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_widthPercent="50%"
            tools:ignore="RtlHardcoded"
            tools:text="ONLINE" />
        <!--suppress AndroidDomInspection -->
        <TextView
            android:id="@+id/shardStatus2"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/shardStatus1"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_widthPercent="50%"
            tools:ignore="RtlHardcoded"
            tools:text="ONLINE" />
        <!--suppress AndroidDomInspection -->
        <TextView
            android:id="@+id/shardStatus3"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/shardStatus2"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_widthPercent="50%"
            tools:ignore="RtlHardcoded"
            tools:text="OFFLINE" />

        <!--suppress AndroidDomInspection -->
        <TextView
            android:id="@+id/shardStatus4"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/shardStatus3"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:layout_widthPercent="50%"
            tools:ignore="RtlHardcoded"
            tools:text="ONLINE" />


    </android.support.percent.PercentRelativeLayout>

    <com.recoverrelax.pt.riotxmppchat.Widget.AppProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryColorDark"
        android:visibility="visible"
        tools:visibility="invisible" />
</FrameLayout>