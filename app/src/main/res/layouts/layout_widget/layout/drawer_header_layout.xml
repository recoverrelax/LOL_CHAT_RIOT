<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerDrawerImage"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_layout_height"
    android:background="@drawable/latest_skin"
    android:paddingTop="5dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            tools:ignore="NestedWeights">

            <View
                android:layout_width="@dimen/drawer_image_width"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription" />

        </FrameLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/drawer_username"
            app:layout_widthPercent="70%"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            tools:text="recover.relax@gmail.com"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium" />

        <ImageView
            android:id="@+id/statusIcon"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_account_box_white_36dp"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </android.support.percent.PercentRelativeLayout>
</LinearLayout>