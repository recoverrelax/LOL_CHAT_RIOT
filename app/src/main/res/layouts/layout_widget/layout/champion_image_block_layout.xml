<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="end|center_vertical"
              android:baselineAligned="false"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:gravity="end"
        android:orientation="vertical">

        <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewHeight
            android:id="@+id/championSummoner1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:src="@drawable/champion_example"
            tools:visibility="visible"/>

        <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewHeight
            android:id="@+id/championSummoner2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:src="@drawable/champion_example"
            tools:visibility="visible"/>

        <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewHeight
            android:id="@+id/championSummoner3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:src="@drawable/champion_example"
            tools:visibility="visible"/>

        <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewHeight
            android:id="@+id/championSummoner4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:src="@drawable/champion_example"
            tools:visibility="visible"/>

        <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewHeight
            android:id="@+id/championSummoner5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:src="@drawable/champion_example"
            tools:visibility="visible"/>

        <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewHeight
            android:id="@+id/championSummoner6"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:visibility="invisible"
            tools:src="@drawable/champion_example"
            tools:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/summonerName"
            style="@style/recent_games_champion_names_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="NestedWeights"
            tools:text="Myan"/>

        <TextView
            android:id="@+id/summonerName2"
            style="@style/recent_games_champion_names_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="Myan"/>

        <TextView
            android:id="@+id/summonerName3"
            style="@style/recent_games_champion_names_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="Myan"/>

        <TextView
            android:id="@+id/summonerName4"
            style="@style/recent_games_champion_names_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="Myan"/>

        <TextView
            android:id="@+id/summonerName5"
            style="@style/recent_games_champion_names_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="Myan"/>

        <TextView
            android:id="@+id/summonerName6"
            style="@style/recent_games_champion_names_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="Myan"/>
    </LinearLayout>
</LinearLayout>