<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <com.recoverrelax.pt.riotxmppchat.Widget.AppProgressBar
        android:id="@+id/championRotationProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewWidth
                android:id="@+id/champ1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:src="@drawable/champion_example"/>

            <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewWidth
                android:id="@+id/champ2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:src="@drawable/champion_example"/>

            <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewWidth
                android:id="@+id/champ3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:src="@drawable/champion_example"/>

            <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewWidth
                android:id="@+id/champ4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:src="@drawable/champion_example"/>

            <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewWidth
                android:id="@+id/champ5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:src="@drawable/champion_example"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewWidth
                android:id="@+id/champ6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:src="@drawable/champion_example"/>

            <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewWidth
                android:id="@+id/champ7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:src="@drawable/champion_example"/>

            <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewWidth
                android:id="@+id/champ8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:src="@drawable/champion_example"/>

            <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewWidth
                android:id="@+id/champ9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:src="@drawable/champion_example"/>

            <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewWidth
                android:id="@+id/champ10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:src="@drawable/champion_example"/>
        </LinearLayout>


    </LinearLayout>
</FrameLayout>