<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:app="http://schemas.android.com/apk/res-auto"
                                               xmlns:tools="http://schemas.android.com/tools"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:background="@color/white">

    <!--suppress AndroidDomInspection -->
    <TextView
        android:id="@+id/yourTeam"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/primaryColorDark"
        android:gravity="center"
        android:text="@string/current_game_your_team"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        app:layout_widthPercent="50%"
        tools:ignore="RtlHardcoded"/>
    <!--suppress AndroidDomInspection -->
    <TextView
        android:id="@+id/enemyTeam"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/primaryColorDark"
        android:gravity="center"
        android:text="@string/current_game_enemy_team"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        app:layout_widthPercent="50%"
        tools:ignore="RtlHardcoded"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yourTeam">

        <com.recoverrelax.pt.riotxmppchat.Widget.AppProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible"
            tools:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewWidth
                android:id="@+id/ban1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_cross"/>

            <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewWidth
                android:id="@+id/ban2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_cross"/>

            <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewWidth
                android:id="@+id/ban3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_cross"/>

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewWidth
                android:id="@+id/ban4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_cross"/>

            <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewWidth
                android:id="@+id/ban5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_cross"/>

            <com.recoverrelax.pt.riotxmppchat.Widget.SquareImageViewWidth
                android:id="@+id/ban6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_cross"/>
        </LinearLayout>


    </FrameLayout>
</android.support.percent.PercentRelativeLayout>