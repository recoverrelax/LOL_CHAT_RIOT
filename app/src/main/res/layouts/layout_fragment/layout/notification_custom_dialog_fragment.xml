<LinearLayout android:id="@+id/parentLayout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center_vertical|center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="10dp">

    <TextView
        android:id="@+id/title"
        style="@style/settings_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="?attr/colorPrimary"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        tools:text="Notify me when 2Fast4U: "/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/isOnline"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:textOff="NO"
                android:textOn="YES"
                android:theme="@style/AppTheme.Base.Settings"
                tools:ignore="RtlHardcoded"/>

            <TextView
                style="@style/settings_notif_child"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/settings_custom_notif_online"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/isOffline"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:textOff="NO"
                android:textOn="YES"
                android:theme="@style/AppTheme.Base.Settings"
                tools:ignore="RtlHardcoded"/>

            <TextView
                style="@style/settings_notif_child"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/settings_custom_notif_offline"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/hasStartedGame"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:textOff="NO"
                android:textOn="YES"
                android:theme="@style/AppTheme.Base.Settings"
                tools:ignore="RtlHardcoded"/>

            <TextView
                style="@style/settings_notif_child"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/settings_custom_notif_start_game"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/hasLeftGame"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:textOff="NO"
                android:textOn="YES"
                android:theme="@style/AppTheme.Base.Settings"
                tools:ignore="RtlHardcoded"/>

            <TextView
                style="@style/settings_notif_child"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/settings_custom_notif_end_game"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/hasSentPm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:textOff="NO"
                android:textOn="YES"
                android:theme="@style/AppTheme.Base.Settings"
                tools:ignore="RtlHardcoded"/>

            <TextView
                style="@style/settings_notif_child"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/settings_custom_notif_message"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>