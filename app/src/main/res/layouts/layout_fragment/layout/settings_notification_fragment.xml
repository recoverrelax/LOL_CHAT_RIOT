<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/settings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_global_notifications_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/primaryColorDark" />


        <LinearLayout
            android:id="@+id/visible_sound_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/settings_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_global_always_receive_notifications" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/notificationAlwaysOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="NO"
                    android:textOn="YES"
                    android:theme="@style/AppTheme.Base.Settings" />

                <!--<CheckBox-->
                <!--android:focusable="false"-->
                <!--android:clickable="false"-->
                <!--android:background="@color/transparent"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/notificationAlwaysOn"-->
                <!--android:layout_gravity="center_horizontal" />-->
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/settings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_when_app_visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/primaryColorDark" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/settings_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_new_message_sound_notification" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <!--<CheckBox-->
                <!--android:focusable="false"-->
                <!--android:clickable="false"-->
                <!--android:background="@color/transparent"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/visible_sound"-->
                <!--android:layout_gravity="center_horizontal"  />-->

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/visible_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="NO"
                    android:textOn="YES"
                    android:theme="@style/AppTheme.Base.Settings" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/visible_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/settings_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_new_message_text_notification" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <!--<CheckBox-->
                <!--android:focusable="false"-->
                <!--android:clickable="false"-->
                <!--android:background="@color/transparent"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/visible_text"-->
                <!--android:layout_gravity="center_horizontal" />-->

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/visible_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="NO"
                    android:textOn="YES"
                    android:theme="@style/AppTheme.Base.Settings" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            style="@style/settings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_when_app_background" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/primaryColorDark" />

        <LinearLayout
            android:id="@+id/background_sound_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/settings_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_new_message_sound_notification" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <!--<CheckBox-->
                <!--android:focusable="false"-->
                <!--android:clickable="false"-->
                <!--android:background="@color/transparent"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/background_sound"-->
                <!--android:layout_gravity="center_horizontal" />-->

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/background_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="NO"
                    android:textOn="YES"
                    android:theme="@style/AppTheme.Base.Settings" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/background_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/settings_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_new_message_text_notification" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/background_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="NO"
                    android:textOn="YES"
                    android:theme="@style/AppTheme.Base.Settings" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>