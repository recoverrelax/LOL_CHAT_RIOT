<resources>

    <style name="TextViewStyle" parent="android:Widget.TextView" >
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText" >
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


    <style name="ButtonLogin" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/button_background_selector_t</item>
        <item name="android:textColor">@drawable/button_text_selector</item>
    </style>
    <style name="ButtonDrawer" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/button_background_selector_logout</item>
        <item name="android:textColor">@drawable/button_text_selector_logout</item>
    </style>



    <style name="login_edittext" parent="EditTextStyle">
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textColorHint">@color/primaryColor</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">@dimen/login_textview_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/login_textview_padding_top_bottom</item>
    </style>

    <style name="friend_list_cardview_win_loss_1_textview">
        <item name="android:textSize">@dimen/text_size_macro</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="friend_list_cardview_win_loss_2_textview">
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="friend_list_cardview_league_division_textview">
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

    <style name="chatEditText" parent="EditTextStyle">
        <item name="android:gravity">top|left</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="normalToolbarStyleT">
        <item name="android:background">@color/primaryColor120</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    <style name="normalToolbarStyle">
        <item name="android:background">@color/primaryColor</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    <style name="darkToolbarStyle">
        <item name="android:background">@color/primaryColorDark</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="settings_title">
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settings_child">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingLeft">32dp</item>
    </style>

    <style name="settings_notif_child">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="dashboardTitles">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/def_spacing_double</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
    </style>

    <style name="dashboardSubTitles">
        <item name="android:textColor">@color/primaryColorDark</item>
        <item name="android:padding">@dimen/def_spacing_double</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
    </style>

    <style name="dashboardItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/abc_text_size_display_1_material</item>
        <item name="android:gravity">center</item>
    </style>

    <dimen name="login_textview_padding_top_bottom">10dp</dimen>
    <dimen name="def_spacing_double">16dp</dimen>
    <dimen name="def_spacing_default">8dp</dimen>

