<resources>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewStyleWhite" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


    <style name="ButtonLogin" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/button_background_selector_t</item>
        <item name="android:textColor">@drawable/button_text_selector</item>
    </style>

    <style name="ButtonDrawer" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/button_background_selector_logout</item>
        <item name="android:textColor">@drawable/button_text_selector_logout</item>
    </style>


    <style name="login_edittext" parent="EditTextStyle">
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textColorHint">@color/primaryColor</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">@dimen/login_textview_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/login_textview_padding_top_bottom</item>
    </style>

    <style name="friend_list_cardview_win_loss_1_textview">
        <item name="android:textSize">@dimen/text_size_macro</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="friend_list_cardview_win_loss_2_textview">
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="friend_list_cardview_league_division_textview">
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

    <style name="chatEditText" parent="EditTextStyle">
        <item name="android:gravity">top|left</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="toolbarStyleLight">
        <item name="android:background">@color/primaryColor120</item>
        <item name="theme">@style/PopUpToolbarThemeDarkActionbar</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PopUpToolbarThemeDarkActionbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PopUpToolbarThemeLightActionbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="toolbarStyleDark" parent="@style/toolbarStyleLight">
        <item name="theme">@style/PopUpToolbarThemeLightActionbar</item>
    </style>


    <style name="toolbarTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="settings_title">
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="settings_child">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingLeft">32dp</item>
    </style>

    <style name="settings_notif_child">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="dashboardTitles">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/def_spacing_double</item>
        <item name="android:background">@color/colorDark</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="dashboardSubTitles">
        <item name="android:textColor">@color/primaryColorDark</item>
        <item name="android:padding">@dimen/def_spacing_double</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="dashboardItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">34sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="recent_games_kda_textview" parent="TextViewStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="recent_games_champion_names_textview" parent="TextViewStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:visibility">invisible</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>