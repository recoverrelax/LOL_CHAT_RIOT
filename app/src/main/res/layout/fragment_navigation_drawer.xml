<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.recoverrelax.pt.riotxmppchat.ui.fragment.NavigationDrawerFragment">

    <LinearLayout
        android:id="@+id/containerDrawerImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="center_horizontal|left"
        android:background="@color/accentColor"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/drawer_margin"
            android:layout_marginBottom="@dimen/drawer_margin"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <ImageView
                android:layout_width="@dimen/drawer_image_width"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/drawer_margin"
                android:src="@drawable/ic_abstract"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/drawer_info_margin_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/drawer_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/drawer_vertical_keyline_left"
                android:text="Edge Labs"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/drawer_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/drawer_vertical_keyline_left"
                android:text="aveiro.edgelabs@gmail.com"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:paddingTop="@dimen/drawer_recyclerview_margin_top"
        android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:layout="@layout/custom_row"
        android:layout_weight="4" />
</LinearLayout>

