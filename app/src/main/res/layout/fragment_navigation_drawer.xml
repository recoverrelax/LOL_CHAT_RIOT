<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.recoverrelax.pt.riotxmppchat.ui.fragment.NavigationDrawerFragment">

    <LinearLayout
        android:id="@+id/containerDrawerImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="@color/drawer_top_background"
        android:gravity="center_horizontal|left"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/drawer_margin"
            android:layout_marginTop="@dimen/drawer_margin"
            android:layout_weight="2"
            tools:ignore="NestedWeights">

            <ImageView
                android:layout_width="@dimen/drawer_image_width"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/drawer_margin"
                android:paddingLeft="@dimen/drawer_vertical_keyline_left"
                android:src="@drawable/lol_logo"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <TextView
            android:id="@+id/drawer_username"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/drawer_info_margin_bottom"
            android:paddingLeft="@dimen/drawer_vertical_keyline_left"
            android:text="aveiro.edgelabs@gmail.com"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/white"
        tools:layout="@layout/custom_row">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/drawerList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/drawer_recyclerview_margin_top"
            tools:layout="@layout/custom_row" />
    </FrameLayout>
</LinearLayout>

