<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.recoverrelax.pt.riotxmppchat.ui.fragment.PersonalMessageFragment">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/messageRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/expandButton"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_teemo"
        fab:fab_colorNormal="@color/primaryColor"
        fab:fab_colorPressed="@color/accentColor"
        fab:fab_colorRipple="@color/primaryColor"
        fab:menu_showShadow="true"
        android:translationY="30dp"
        fab:fab_size="normal"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_gravity="right" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/message_layout"
        android:background="@color/loginBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <EditText
            style="@style/chatEditText"
            android:layout_width="match_parent"
            android:layout_marginRight="100dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="match_parent"
            tools:text="OlÃ¡ tudo bem?"
            android:id="@+id/chatEditText"/>

    </LinearLayout>
</LinearLayout>
